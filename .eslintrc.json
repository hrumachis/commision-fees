{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "indent": [ "error", 2 ],
        "object-curly-spacing":  [
            "error",
            "never"
        ],
        "space-in-parens": [
            "error",
            "never"
        ]
    }
}